<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tvTitleSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered By"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        tools:ignore="MissingConstraints"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:background="@drawable/border_rounded_red_custom"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/imgLogoSplash"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        tools:ignore="MissingConstraints"
        app:srcCompat="@drawable/telkomsel_logo4"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSplash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/marginSide"
        android:layout_marginLeft="@dimen/marginSide"
        android:padding="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>